# Riot API Configuration
RIOT_API_KEY=your_riot_api_key_here
RIOT_REGION=europe
RIOT_PLATFORM=eun1

# Database Configuration
POSTGRES_DB=riot_api_db
POSTGRES_USER=riot_api_user
POSTGRES_PASSWORD=your_database_password
DATABASE_URL=postgresql://riot_api_user:your_database_password@postgres:5432/riot_api_db

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Job Scheduler Configuration
JOB_SCHEDULER_ENABLED=false
JOB_INTERVAL_SECONDS=120
JOB_TIMEOUT_SECONDS=90
MAX_TRACKED_PLAYERS=10

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO

# Frontend Configuration (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=development

# CORS Configuration
# Development: localhost origins
# Production: Add your production domain (e.g., https://yourdomain.com)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Docker Configuration
COMPOSE_PROJECT_NAME=riot_api_app
BACKEND_PORT=8000
FRONTEND_PORT=3000
POSTGRES_PORT=5432

# Production Deployment Notes:
# - Set NEXT_PUBLIC_API_URL to your production domain (e.g., https://yourdomain.com)
# - Update CORS_ORIGINS to include your production domain
# - Set DEBUG=false and LOG_LEVEL=INFO
# - Use a strong POSTGRES_PASSWORD
# - Update BACKEND_PORT, FRONTEND_PORT, POSTGRES_PORT if needed for your deployment
